<Page x:Class="ProjectTimeline.pages.ManageProject"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectTimeline.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageProject">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtSearch" HorizontalAlignment="Left" Margin="23,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="18" Height="26"/>
        <Label Content="Enter Project code" HorizontalAlignment="Left" Margin="23,107,0,0" VerticalAlignment="Top" FontSize="18" Height="34" Width="155"/>
        <Button x:Name="btnSearch" Content="SEARCH" HorizontalAlignment="Left" Margin="23,197,0,0" VerticalAlignment="Top" FontSize="18" Height="42" Width="120" Click="btnSearch_Click"/>
        <ListBox x:Name="lstDisplay" Grid.Column="1" Margin="35,35,35,35" BorderBrush="Black" BorderThickness="2"/>

    </Grid>
</Page>
