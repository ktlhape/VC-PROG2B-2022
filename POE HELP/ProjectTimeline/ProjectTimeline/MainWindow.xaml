<Window x:Class="ProjectTimeline.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectTimeline"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
     Loaded="Window_Loaded"
        Title="Project Timeline" Height="550" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Background="LightBlue">
            <Button Content="Home" x:Name="btnHome" FontSize="24" Margin="15, 10" Click="btnHome_Click"/>
            <Button Content="Manage Projects" Name="btnManage" FontSize="24" Margin="15, 10" Click="btnManage_Click"/>
        </StackPanel>


        <Frame Grid.Column="1" x:Name="frmNav" NavigationUIVisibility="Hidden"/>

    </Grid>
</Window>
